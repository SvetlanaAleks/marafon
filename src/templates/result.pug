include scroll-section
section.result#result
	+scroll([9, 1, 2, 3, 4], '#promo', '#purpose')
	.result__blur.result__blur--pink.result__blur--1
	.result__blur.result__blur--blue.result__blur--2
	.container
		h2.result__title.title результаты нашего марафона
		.result__list
			.result__item.result__item--1
				picture
					source(srcset="img/result_photo_1.webp", type="image/webp")
					img.result__photo(src="img/result_photo_1.jpg", alt="result photo")
			.result__item.result__item--2
				picture
					source(srcset="img/result_photo_2.webp", type="image/webp")
					img.result__photo(src="img/result_photo_2.jpg", alt="result photo")
			.result__item.result__item--3
				picture
					source(srcset="img/result_photo_3.webp", type="image/webp")
					img.result__photo(src="img/result_photo_3.jpg", alt="result photo")
			.result__item.result__item--4
				picture
					source(srcset="img/result_photo_4.webp", type="image/webp")
					img.result__photo(src="img/result_photo_4.jpg", alt="result photo")